
<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<% if @current_user%>
<div class="row">
<% for post in @posts %>
<div class="col-md-3 col-sm-6">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
  </div>
<% end %>
</div>
<% end %>


<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>

